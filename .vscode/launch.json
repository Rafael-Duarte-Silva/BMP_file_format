{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "run main",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",
      "preLaunchTask": "make build main",
      "args": [
        "${workspaceFolder}/src/images/sample1.bmp"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "pretty print",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ]
    }
  ]
}
